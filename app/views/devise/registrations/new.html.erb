<%= render "shared/header" %>

<div class="container">
  <div class="wrap">
    <h2 class="h2-title">会員情報登録</h2>

    <!-- modelhaはUserモデルであれば@userを渡す。-->
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
      <!--  エラー文 -->
      <%= render 'shared/error_messages', model: f.object %>

      <!--  フォーム内容 -->
      <div class="new-user">
        <div class="row form-box">
          <div class="forms-item col-md-3 indispensable">
            画像
          </div>
          <label for="user-icon-m" class ="click-upload col-md-7" id ="click-upload-id">
            <span>画像をアップロード</span>
            <%= f.file_field :icon, class:"upload-btn user-icon-m col-md-7", id:"user-icon-m"%> 
          </label>
        </div>
        <div class="row">
          <div class="col-md-3 margin-15"></div>
          <div class="col-md-7 icon-box" id="image-list">
            <!--ここに登録された画像のプレビューが表示される-->
          </div>
        </div>
        <div class="row form-box">
          <label for="user-nickname" class="forms-item col-md-3 indispensable">
            ニックネーム
          </label> 
          <%= f.text_area :nickname , class:"input-area col-md-7", id:"user-nickname", placeholder:"cooktime", maxlength:"40" %>
        </div> 
        <div class="row form-box">
          <label for="user-profile" class="forms-item col-md-3 indispensable">
            プロフィール
          </label> 
          <%= f.text_area :profile , class:"input-area-wide col-md-7", id:"user-profile", placeholder:"プロフィールを入力してください", maxlength:"200" %>
        </div> 
        <div class="row form-box">
          <label for="user-family user-first" class="forms-item col-md-3 indispensable">
            お名前(全角)
          </label> 
          <%= f.text_field :family_name , class:"input-area users-family-name col-md-2", id:"user-family", placeholder:"姓）全角で入力してください" %>
          <%= f.text_field :first_name , class:"input-area users-first-name col-md-2", id:"user-first", placeholder:"名）全角で入力してください" %>
        </div>
        <div class="row form-box">
          <label for="user-email" class="forms-item col-md-3 indispensable">
            メールアドレス
          </label> 
          <%= f.email_field :email, class:"input-area col-md-7", id:"user-email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="row form-box">
          <label for="user-password" class="forms-item col-md-3 indispensable">
            パスワード
          </label> 
          <%= f.password_field :password , class:"input-area col-md-7", id:"user-password", placeholder:"6文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>
        <div class="row form-box">
          <label for="user-password-confirmation" class="forms-item col-md-3 indispensable">
            パスワード(確認用)
          </label> 
          <%= f.password_field :password_confirmation , class:"input-area col-md-7", id:"user-password-confirmation", placeholder:"同じパスワードを入力してください" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div> 
        <div class='submit-btn'>
          <div class="attention">
          「会員登録」のボタンを押すことにより、利用規約に同意したものとみなします
          </div>
          <%= f.submit "会員情報登録" ,class:"submit-red-btn" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>