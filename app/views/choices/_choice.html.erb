<% if user_signed_in? %>
  <% if recipe.choiced_by?(current_user.id) %>
    <div><%= image_tag "icon-star-light_green.png", alt:"tomato", class:"icons-type"%></div>
    <%= link_to  recipe_choices_path(recipe.id), method: :delete, remote: true, id: :"recipe-button-#{recipe.id}" do %>
      <i class="fa-lg fas fa-heart icon-btn choiced"></i>
      <span class="choice-box">選択中</span>
    <% end %>
  <% else %>
    <div><%= image_tag "icon-star-gry.png", alt:"tomato", class:"icons-type-gry"%></div>
    <%= link_to recipe_choices_path(recipe.id), method: :post, remote: true, id: :"recipe-button-#{recipe.id}" do %>
      <i class="fa-lg fas fa-heart icon-btn not-choice"></i>
      <span class="choice-box">未選択</span>
    <% end %>
  <% end %>
<% else %>
  <div><%= image_tag "icon-star-gry.png", alt:"tomato", class:"icons-type-gry"%></div>
  <i class="fa-lg fas fa-heart icon-btn not-choice"></i>
  <span class="choice-box">未選択</span>
<% end %>