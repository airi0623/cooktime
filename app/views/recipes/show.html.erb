<%= render "shared/header" %>

<div class="container">
  <%= link_to "レシピ登録", new_recipe_path %>
  <%= link_to "root", root_path %>


  <h2 class="concept-title">(レシピ名)の作り方</h2>

  <!-- 画像・カテゴリ・冷蔵・冷凍 -->
  <div class="contents">
    <div class='recipe-img '>
      <div id='slide' class="col-md-6">
        <%# @item.images.each do |image| %>
          <li><%= image_tag "image.png", alt:"料理画像", class:"meal-img"%></li>
          <%#= image_tag image, class:'item-box-img' %>
        <%# end %>
      </div>
    </div>
    <div class='row category-time-days'>
      <div class="show-recipe-category col-md-2 col-5">
        カテゴリー
      </div>
      <div class="show-recipe-time col-md-2 col-5">
        <%= image_tag "icon-time.png", alt:"料理画像", class:"icon-time"%>
        <span>約10分</span>
      </div>
      <div class="show-recipe-days col-md-3 col-6">
        <%= image_tag "icon-cold.png", alt:"料理画像", class:"icon-cold"%>
        <span>冷蔵保存 約<span class="days">4</span>日間</span>
      </div>
      <div class="show-recipe-days col-md-3 col-6">
        <%= image_tag "icon-frozen.png", alt:"料理画像", class:"icon-time"%>
        <span>冷凍保存 約<span class="days">10</span>日間</span>
      </div>
    </div>



  </div>
</div>