<%= render "shared/header" %>
<%= render "shared/fixed-btn" %>
<div class="container">
  <div class="wrap">
    <h2 class="h2-title">お気に入りチェックリスト</h2>
    <ul class='row'>
      <!-- レシピ一つづつ -->
      <% @likes.each do |like|%>
        <li class='list col-md-3 col-6'>
          <%= link_to recipe_path(like.recipe.id) do %>
            <!-- いいねトマト -->
            <div class='like-box'>
            <div><%= image_tag "icon-star-light_green.png", alt:"star", class:"icons-type"%></div>
            <div class="like-box">お気に入り<span><%= @likes.length %></span></div>
            </div> 
            <!-- タイトル -->
            <div class="recipe-title">
              <h3>
                <%= like.recipe.title %>
              </h3>
            </div>  
            <!-- 画像 -->
            <div class='recipe-img-index'>
              <%= image_tag like.recipe.images[0].url, class: "img-recipe" %>
            </div>
            <!--画像の下の細かいコンテンツ-->
            <div class='recipe-info'>
              <table class="table-index" width="100%">
                <tr>
                  <td class='index recipe-category'>
                    <%= image_tag "icon-category.png", alt:"料理画像", class:"icons-type"%>
                    <span><%= like.recipe.category.name %></span>
                  </td>
                  <td class='index recipe-time'>
                    <%= image_tag "icon-time.png", alt:"料理画像", class:"icons-type"%>
                    <span>約<%= like.recipe.time %>分</span>
                  </td>
                </tr>
                <tr>
                  <td class='index recipe-days'>
                    <%= image_tag "icon-cold.png", alt:"料理画像", class:"icons-type"%>
                    <span>約<%= like.recipe.cold_date%>日</span>
                  </td>
                  <td class='index recipe-days'>
                    <%= image_tag "icon-frozen.png", alt:"料理画像", class:"icons-type"%>
                    <span>約<%= like.recipe.frozen_date %>日</span>
                  </td>
                </tr>
              </table>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<%= render "shared/footer" %>